<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMabaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textColor="#D82D2D"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtBaihat"
                android:text="Trái tim bên lề"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtCasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ca sĩ: Bằng Kiều"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/btnLike"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icons8_facebook_like_32"/>
                    <ImageView
                        android:id="@+id/btnDislike"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icons8_thumbs_down_32"/>
                </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#2196F3" />
</LinearLayout>
